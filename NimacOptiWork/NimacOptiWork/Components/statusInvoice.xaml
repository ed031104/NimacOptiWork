<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NimacOptiWork.Components.statusInvoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NimacOptiWork.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Padding="5" Background="Transparent" CornerRadius="5">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Ellipse Margin="0 0 5 0" Width="10" Height="10" x:Name="status" VerticalAlignment="Center"/>
            <TextBlock x:Name="tittle" VerticalAlignment="Center" FontFamily="Microsoft Tai Le" FontSize="13" />
        </StackPanel>
    </Border>
</UserControl>

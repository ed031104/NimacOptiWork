<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NimacOptiWork.Page.GestionInvoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NimacOptiWork.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls1="using:NimacOptiWork.Components"
    xmlns:tv="using:WinUI.TableView"
    mc:Ignorable="d">


    <Grid Padding="20 0 20 0">
        <Grid.RowDefinitions>
            <!-- Fila 0 -->
            <RowDefinition Height="Auto"/>
            
            <!-- Fila 1 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel 
        Grid.Row="0"
        Padding="0 50 0 50"
        >
            <TextBlock FontSize="20" Text="GestiÃ³n de Usuarios" />
        </StackPanel>

        <Grid x:Name="containerTable" Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Canvas.ZIndex="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <ScrollViewer

                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                Canvas.ZIndex="0"
                >

                <tv:TableView
                    x:Name="dataGridInvoices"
                    ItemsSource="{x:Bind invoicesFromDb, Mode=OneTime}"
                    AutoGenerateColumns="False"
                    xmlns:tv="using:WinUI.TableView"
                >

                    <tv:TableView.Columns>
                        <tv:TableViewTextColumn Header="Invoice ID" Binding="{Binding InvoiceId}" IsReadOnly="True" Width="50"/>
                        <tv:TableViewTextColumn Header="STNO" Binding="{Binding Stno}" />
                        <tv:TableViewTextColumn Header="BOSFX" Binding="{Binding Bosfx}" />
                        <tv:TableViewTemplateColumn Header="Status">
                            <tv:TableViewTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <controls1:statusInvoice TypeStatusInvoice="{Binding StatusInvoice}"/>
                                </DataTemplate>
                            </tv:TableViewTemplateColumn.CellTemplate>
                        </tv:TableViewTemplateColumn>
                        <tv:TableViewTextColumn Header="SLSTYP" Binding="{Binding Slstyp}" Width="100"/>
                        <tv:TableViewTextColumn Header="ENDT8" Binding="{Binding Endt8}" Width="100"/>
                        <tv:TableViewTextColumn Header="DOCSU" Binding="{Binding Docsu}" Width="100"/>
                        <tv:TableViewTextColumn Header="RFDCNO" Binding="{Binding Rfdcno}" Width="100"/>
                        <tv:TableViewTextColumn Header="LNNO" Binding="{Binding Lnno}" Width="100"/>
                        <tv:TableViewTextColumn Header="SOS1" Binding="{Binding Sos1}" Width="100"/>
                        <tv:TableViewTextColumn Header="PAN020" Binding="{Binding Pano20}" Width="100"/>
                        <tv:TableViewTextColumn Header="DS18" Binding="{Binding Ds18}" Width="100"/>
                        <tv:TableViewTextColumn Header="QRQY" Binding="{Binding Orqy}" Width="100"/>
                        <tv:TableViewTextColumn Header="BOIMCT" Binding="{Binding Boimct}" Width="100"/>
                        <tv:TableViewTextColumn Header="SPQTY" Binding="{Binding Spqty}" Width="100"/>
                        <tv:TableViewTextColumn Header="TRXCD" Binding="{Binding Trxcd}" Width="100"/>
                        <tv:TableViewTextColumn Header="UNCS" Binding="{Binding Uncs}" Width="100"/>
                        <tv:TableViewTextColumn Header="UNLS" Binding="{Binding Unls}" Width="100"/>
                        <tv:TableViewTextColumn Header="UNSEL" Binding="{Binding Unsel}" Width="100"/>
                        <tv:TableViewTextColumn Header="WTUM" Binding="{Binding Wtum}" Width="100"/>
                        <tv:TableViewTextColumn Header="CUNM" Binding="{Binding Cunm}" Width="100"/>
                        <tv:TableViewTextColumn Header="SPVIDS" Binding="{Binding Spvids}" Width="100"/>
                        <tv:TableViewTextColumn Header="Date Entry" Binding="{Binding DateEntry}"/>

                        <!-- Columna editar -->
                        <tv:TableViewTemplateColumn Header="Editar">
                            <tv:TableViewTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                Click="editInvoiceEventBtn"
                                Tag="{Binding InvoiceId}"
                                HorizontalAlignment="Center"
                                >
                                        <Button.Content>
                                            <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                        </Button.Content>
                                    </Button>
                                </DataTemplate>
                            </tv:TableViewTemplateColumn.CellTemplate>
                        </tv:TableViewTemplateColumn>

                        <!-- Columna eliminar -->
                        <tv:TableViewTemplateColumn Header="Eliminar">
                            <tv:TableViewTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button 
                                        Click="deleteInvoiceEventBtn"
                                        Tag="{Binding InvoiceId}"
                                        HorizontalAlignment="Center"
                                    >
                                            <Button.Content>
                                                <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </tv:TableViewTemplateColumn.CellTemplate>
                        </tv:TableViewTemplateColumn>
                    </tv:TableView.Columns>
                </tv:TableView>
            </ScrollViewer>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <PipsPager
                    x:Name="pipsPager"
                    NumberOfPages="1"
                    SelectedPageIndex="0"
                    MaxVisiblePips="7"
                    Orientation="Horizontal"
                    PreviousButtonVisibility="Visible"
                    NextButtonVisibility="Visible" 
                    SelectedIndexChanged="pipsPager_SelectedIndexChanged"
                />
            </StackPanel>

            <!-- Popup -->
            <Popup Grid.Row="0"  x:Name="StandardPopup" IsOpen="False" IsLightDismissEnabled="True" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 70 100 0" >
                <!-- Grid de fondo que ocupa toda la Page -->
                <Grid Background="{StaticResource CardBackground}" Padding="20" CornerRadius="8" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Spacing="60" Orientation="Horizontal"  Padding="0 10 0 20" VerticalAlignment="Center">
                        <TextBlock Text="Formulario para editar facturas" FontSize="16" VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                        <Button Content="Cerrar" Click="ClosePopupClicked" VerticalAlignment="Center" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Height="300">
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical" Spacing="20">
                            <TextBox PlaceholderText="Invoice ID"/>
                            <TextBox PlaceholderText="STNO"/>
                            <TextBox PlaceholderText="BOSFX"/>
                            <TextBox PlaceholderText="SLSTYP"/>
                            <TextBox PlaceholderText="ENDT8"/>
                            <ComboBox PlaceholderText="DOCSU">
                                <x:String>Awating</x:String>
                                <x:String>Invoice</x:String>
                            </ComboBox>
                            <TextBox PlaceholderText="RFDCNO"/>
                            <TextBox PlaceholderText="LNNO"/>
                            <TextBox PlaceholderText="SOS1"/>
                            <TextBox PlaceholderText="PAN030"/>
                            <TextBox PlaceholderText="DS18"/>
                            <TextBox PlaceholderText="QRQY"/>
                            <TextBox PlaceholderText="BOIMCT"/>
                            <TextBox PlaceholderText="SPQTY"/>
                            <TextBox PlaceholderText="TRXCD"/>
                            <TextBox PlaceholderText="UNCS"/>
                            <TextBox PlaceholderText="UNLS"/>
                            <TextBox PlaceholderText="WTUM"/>
                            <TextBox PlaceholderText="CUNM"/>
                            <TextBox PlaceholderText="SPVIDS"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel HorizontalAlignment="Stretch" Grid.Row="2" Padding="0 10 0 10">
                        <Button HorizontalAlignment="Stretch" Content="Modificar" Click="ModificarBtn"/>
                    </StackPanel>
                </Grid>
            </Popup>

        </Grid>


 


        <InfoBar
            Grid.Row="0"
            x:Name="infoBar"
            IsOpen="False"
        />
        
        <!-- Overlay de carga -->
        <Grid Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="loadingOverlay" Background="#80000000" Visibility="Collapsed" Canvas.ZIndex="10">
            <ProgressRing Width="60" Height="60" IsActive="True"/>
        </Grid>
        
    </Grid>

</Page>

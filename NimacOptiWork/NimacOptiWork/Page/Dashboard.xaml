                <StackPanel>
                    <TextBlock Text="Productividad" Foreground="White" FontSize="16"/>
                    <TextBlock Text="85%" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#FF107C10" CornerRadius="8" Padding="15" Grid.Column="1">

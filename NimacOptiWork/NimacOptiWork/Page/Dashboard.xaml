                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <Border Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Hola mundo" FontWeight="Bold" FontSize="16"/>

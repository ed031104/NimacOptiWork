                    <StackPanel>
                        <TextBlock Text="Hola mundo" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="soy gustavo" FontSize="14"/>
                    </StackPanel>
                </Border>
            </ListView>
        </Grid>

        <!-- GrÃ¡fico -->
        <Border Grid.Row="3" Background="DarkGray" CornerRadius="8" Padding="10" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Productividad semanal"
                        FontSize="18" FontWeight="SemiBold"
                        Margin="0,0,0,10"/>
                <lvc:CartesianChart
                     Series="{x:Bind Series}"
                     XAxes="{Binding XAxes}"
                     YAxes="{Binding YAxes}"
                     Foreground="Black"
                     AnimationsSpeed="00:00:00.500"
                     Height="400"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

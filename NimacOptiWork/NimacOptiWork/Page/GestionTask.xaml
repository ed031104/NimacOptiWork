<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NimacOptiWork.Page.GestionTask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NimacOptiWork.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:entities="using:Domain.Models"
    >


    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="{ThemeResource CardBackground}" Padding="20 30 50 30" BorderThickness="0,0,0,1" BorderBrush="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center">
                <TextBlock
                    Text="Backlog de Tareas"
                    FontSize="25"
                    FontFamily="Segoe UI Semibold"
                />
                <TextBlock
                    FontSize="14"
                    Foreground="{ThemeResource ForegroundSecond}"
                    Text="Gestiona y visualiza todas las tareas del proyecto con sus facturas asociadas"    
                />
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <Button
                    Background="#1549e6"
                    Foreground="White"
                    Padding="10 5 10 5"
                    Content="Nueva Tarea"
                >
                    <Button.Flyout>
                        <Flyout Placement="LeftEdgeAlignedTop">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                                    <TextBlock FontSize="15" FontFamily="Segoe UI Semibold" Text="Formulario para crear una nueva tarea" VerticalAlignment="Center"/>
                                    <FontIcon Glyph="&#xE9D5;" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Spacing="15" Padding="0 20 0 20 ">
                                    <TextBox x:Name="tittleInput" PlaceholderText="Título" HorizontalAlignment="Stretch" AcceptsReturn="True" TextWrapping="Wrap"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             />
                                    <TextBox x:Name="descriptionInput" PlaceholderText="Descripción" HorizontalAlignment="Stretch" 
                                                AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             />
                                    <AutoSuggestBox x:Name="facturaAutoSuggest" PlaceholderText="Type a control name"
                                        TextChanged="facturaCreate_TextChanged"
                                        QueryIcon="Find"
                                        QuerySubmitted="facturaCreate_QuerySubmitted"
                                                    />
                                </StackPanel>

                                <StackPanel Grid.Row="2" HorizontalAlignment="Stretch">
                                    <Button Content="Agregar" HorizontalAlignment="Stretch" Click="crearTaskBtn"/>
                                </StackPanel>
                                
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

        </Grid>

        <SplitView x:Name="MainSplitView" Grid.Row="1"  Padding="10 30 20 0" DisplayMode="Overlay" IsPaneOpen="False"  PanePlacement="Right">

            <!-- Panel lateral -->
            <SplitView.Pane>

                <StackPanel BorderBrush="Gray" CornerRadius="15 0 0 15" BorderThickness="1 1 0 1" Padding="10 0 10 0" HorizontalAlignment="Stretch" >

                    <TextBlock FontSize="20" Text="Detalles" Padding="0 10 0 30"/>

                    <Grid Padding="10,0,10,0" ColumnSpacing="10" Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!-- Toma todo el espacio disponible -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Se ajusta al contenido -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Persona asignada:" VerticalAlignment="Center"/>

                        <!-- DropDownButton al final (derecha) -->
                        <DropDownButton AutomationProperties.Name="Email" Grid.Column="1">
                            <DropDownButton.Content>
                                <StackPanel Orientation="Horizontal" Spacing="10" Padding="10 0 10 0">
                                    <FontIcon Glyph="&#xE715;"/>
                                    <TextBlock  Text="Bartolomé"/>
                                </StackPanel>
                            </DropDownButton.Content>
                            <DropDownButton.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem Text="Juan bartolomé">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE725;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Reply">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8CA;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Reply All">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8C2;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>

                    </Grid>


                    <TextBlock Text="" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="" TextWrapping="Wrap" Margin="0,10,0,0"/>
                    <Button Content="Cerrar" Click="ClosePane_Click"/>

                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="50" Padding="20 20 10 0" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="10">

                            <AutoSuggestBox 
                            PlaceholderText="Buscar por número de tarea"
                            QueryIcon="Find"
                            Width="300"
                            />
                            <Button Content="Buscar"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10">

                            <AutoSuggestBox 
                               PlaceholderText="Buscar por título de tarea"
                               QueryIcon="Find"
                               Width="300"
                               />
                            <Button Content="Buscar"/>
                        </StackPanel>

                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Padding="0 20 0 0">

                        <ListView x:Name="Control4"
                     BorderThickness="1"
                     ItemsSource="{x:Bind ListTask}"
                          >
                            <ListView.ItemTemplate>

                                <DataTemplate>
                                    <Border Tapped="Task_Tapped" Background="{ThemeResource CardBackground}" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!--Title Header-->
                                                <Grid Padding="0 0 0 5" ColumnSpacing="10" HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock TextWrapping="Wrap" FontSize="16" Text="Implementación de Facturación" FontWeight="SemiBold"/>
                                                    <Border Grid.Column="2" VerticalAlignment="Center"  Background="#453012" Padding="7 2 7 2" CornerRadius="5">
                                                        <TextBlock FontSize="12" Text="Alta" Foreground="#f26f11"/>
                                                    </Border>
                                                    <Border Grid.Column="3" VerticalAlignment="Center" Background="{ThemeResource StatusInForDoing}" Padding="7 2 7 2" CornerRadius="5">
                                                        <!--Estado textBlock-->
                                                        <TextBlock FontSize="12" Text="A la espera" Foreground="{ThemeResource StatusInForDoingForeground}"/>
                                                    </Border>
                                                </Grid>
                                                <!--Data Task-->
                                                <StackPanel Padding="0 0 0 15" Grid.Row="1" Orientation="Horizontal" Spacing="10">
                                                    <TextBlock Foreground="{ThemeResource ForegroundSecond}" FontSize="12" Text="TSK-002" FontWeight="SemiBold"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <FontIcon Foreground="{ThemeResource ForegroundSecond}" FontSize="12" Glyph="&#xE823;" />
                                                        <!--Fecha Creacion-->
                                                        <TextBlock Foreground="{ThemeResource ForegroundSecond}" FontSize="12" Text="{Binding CreatedDate}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!--Description Task-->
                                                <StackPanel Padding="0 0 0 15" Grid.Row="2" Orientation="Horizontal">
                                                    <TextBlock TextWrapping="Wrap" MaxWidth="1000" Text="{Binding Description}" FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <!--Footer Task-->
                                                <Grid Padding="0 0 0 5" Grid.Row="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Spacing="10" Orientation="Horizontal">
                                                        <PersonPicture 
                                                 VerticalAlignment="Center"
                                               DisplayName="S/A"
                                               Width="32"
                                               Height="32"/>
                                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                            <TextBlock
                                                                 FontSize="13"
                                                               Text="Sin asignar"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource ForegroundSecond}"/>
                                                            <TextBlock FontSize="12" Text="..." Foreground="{ThemeResource ForegroundSecond}"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="5" Grid.Column="2">
                                                        <FontIcon Foreground="{ThemeResource ForegroundSecond}" Glyph="&#xE8A5;" FontSize="12"/>
                                                        <TextBlock Text="{Binding InvoiceNumber}" FontSize="12" Foreground="{ThemeResource ForegroundSecond}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                </Grid>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>

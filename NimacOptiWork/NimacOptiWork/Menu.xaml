<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NimacOptiWork.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NimacOptiWork"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Menu">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Barra de titulo personalizada -->
        <TitleBar 
           Grid.Row="0" 
           x:Name="SimpleTitleBar"
           Title="Menú"
      >
            <TitleBar.IconSource>
                <FontIconSource Glyph="&#xF4AA;"/>
            </TitleBar.IconSource>

            <TitleBar.Content >
                <StackPanel 
                  Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Spacing="10"
              >
                    <TextBlock 
                      Text="Usuario: Juan Pérez - Administrador"
                      VerticalAlignment="Center"
                      Foreground="White"/>
                    <PersonPicture 
                      DisplayName="Juan Pérez"
                      Width="32"
                      Height="32"
                  />
                </StackPanel>
            </TitleBar.Content>

        </TitleBar>


        <!--Contenido Principal-->
        <NavigationView Grid.Row="1" Grid.Column="0" 
          x:Name="navView"
          ItemInvoked="navView_ItemInvoked"
          PaneDisplayMode="Left"
      >

            <!--Elementos del menu-->
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="dashboard">
                    <NavigationViewItem.Icon>
                        <BitmapIcon UriSource="https://img.icons8.com/material-outlined/24/dashboard-layout.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Gestión de usuarios" Icon="OtherUser" Tag="Gestión de usuarios"/>
                <NavigationViewItem Content="Configuración" Icon="Setting" Tag="settings"/>
            </NavigationView.MenuItems>

            <!--Contenedor de páginas-->
            <Frame x:Name="ContentArea" />
        </NavigationView>
    </Grid>
</Window>
